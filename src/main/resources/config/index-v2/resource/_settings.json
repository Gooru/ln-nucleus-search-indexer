 {
    "index": {
      "translog": {
        "flush_threshold_size": "200mb"
      },
      "analysis": {
        "analyzer": {
          "gooru_kstem": {
            "type": "custom",
            "filter": [
              "lowercase",
              "stop",
              "kstem"
            ],
            "tokenizer": "standard"
          },
          "keyword_lowercase": {
            "type": "custom",
            "filter": [
              "lowercase",
              "trim"
            ],
            "tokenizer": "keyword"
          },
          "whitespace_lowercase": {
            "type": "custom",
            "filter": [
              "lowercase",
              "trim"
            ],
            "tokenizer": "whitespace"
          },
          "snowball_lowercase": {
            "type":"custom",
            "filter": [
              "lowercase",
              "my_snow",
              "stop"
            ],
            "tokenizer": "standard"
          }
        },
        "filter" : {
                "my_snow" : {
                    "type" : "snowball",
                    "language" : "English"
                }
        }
      },
      "number_of_shards": "11",
      "refresh_interval": "1s"
    }
  }
