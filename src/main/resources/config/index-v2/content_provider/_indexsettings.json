{
   "settings":{
      "index":{
         "analysis":{
            "filter":{
               "autocomplete_filter":{
                  "token_chars":[
                     "letter",
                     "digit"
                  ],
                  "min_gram":"2",
                  "type":"edge_ngram",
                  "max_gram":"20"
               }
            },
            "analyzer":{
               "autocomplete":{
                  "filter":[
                     "lowercase",
                     "autocomplete_filter"
                  ],
                  "type":"custom",
                  "tokenizer":"standard"
               },
               "keyword_lowercase":{
                  "type":"custom",
                  "tokenizer":"keyword",
                  "filter":[
                     "lowercase",
                     "trim"
                  ]
               }
            }
         }
      }
   },
   "mappings":{
      "publisher":{
         "properties":{
            "id":{
               "type":"keyword"
            },
            "publisher":{
               "type":"text",
               "analyzer":"standard",
               "fields":{
                  "publisherLowercase":{
                     "type":"text",
                     "analyzer":"keyword_lowercase"
                  }
               }
            },
            "publisherSuggest":{
               "type":"text",
               "analyzer":"autocomplete"
            }
         }
      }
   }
}