{
   "settings":{
      "index":{
         "analysis":{
            "analyzer":{
               "keyword_lowercase":{
                  "type":"custom",
                  "tokenizer":"keyword",
                  "filter":[
                     "lowercase",
                     "trim"
                  ]
               }
            }
         }
      }
   },
   "mappings":{
      "contentinfo":{
         "properties":{
            "id":{
               "type":"keyword"
            },
            "contentFormat":{
               "type":"text",
               "analyzer":"keyword_lowercase"
            },
            "indexUpdatedTime":{
               "type":"date",
               "format":"dateOptionalTime"
            },
            "statistics":{
               "properties":{
                  "usedInCollectionCount":{
                     "type":"integer"
                  },
                  "viewsCount":{
                     "type":"long"
                  },
                  "collectionRemixCount":{
                     "type":"long"
                  },
                  "collaboratorCount":{
                     "type":"integer"
                  }
               }
            },
            "resourceInfo":{
               "properties":{
                  "text":{
                     "type":"keyword"
                  },
                  "watsonTags":{
                     "properties":{
                        "taxonomies":{
                           "type":"keyword"
                        },
                        "concepts":{
                           "type":"keyword"
                        },
                        "entities":{
                           "type":"keyword"
                        },
                        "keywords":{
                           "type":"keyword"
                        }
                     }
                  }
               }
            }
         }
      }
   }
}
